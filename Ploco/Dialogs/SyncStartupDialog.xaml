<Window x:Class="Ploco.Dialogs.SyncStartupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration de la Synchronisation" 
        Height="480" Width="540"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" FontSize="18" FontWeight="Bold" Margin="0,0,0,20">
            ðŸ”„ Synchronisation Multi-Utilisateurs
        </TextBlock>

        <!-- Description -->
        <TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="0,0,0,20" Foreground="#FF555555">
            La synchronisation permet Ã  plusieurs utilisateurs de travailler ensemble sur PlocoManager.
            Choisissez votre mode de travail ci-dessous.
        </TextBlock>

        <!-- Choix du mode -->
        <GroupBox Grid.Row="2" Header="Mode de Travail" Margin="0,0,0,15" Padding="15">
            <StackPanel>
                <RadioButton x:Name="RadioDisabled" 
                             Content="Ne pas utiliser la synchronisation" 
                             IsChecked="True"
                             Margin="0,5,0,10"
                             Checked="Mode_Changed"/>
                
                <RadioButton x:Name="RadioMaster" 
                             Content="Mode Master (Modification)" 
                             Margin="0,5,0,5"
                             Checked="Mode_Changed"/>
                <TextBlock TextWrapping="Wrap" 
                           Margin="25,0,0,10" 
                           FontSize="11" 
                           Foreground="#FF666666">
                    Je souhaite modifier les donnÃ©es. Je serai Master ou deviendrai Master si disponible.
                </TextBlock>

                <RadioButton x:Name="RadioConsultant" 
                             Content="Mode Consultation (Lecture seule)" 
                             Margin="0,5,0,5"
                             Checked="Mode_Changed"/>
                <TextBlock TextWrapping="Wrap" 
                           Margin="25,0,0,10" 
                           FontSize="11" 
                           Foreground="#FF666666">
                    Je souhaite uniquement consulter. Je verrai les modifications en temps rÃ©el.
                </TextBlock>
            </StackPanel>
        </GroupBox>

        <!-- Configuration du serveur -->
        <GroupBox Grid.Row="3" Header="Configuration du Serveur" Margin="0,0,0,15" Padding="15">
            <StackPanel x:Name="ServerConfigPanel" IsEnabled="False">
                <TextBlock Text="Adresse du serveur de synchronisation :" Margin="0,0,0,5"/>
                <TextBox x:Name="ServerUrlTextBox" 
                         Text="http://localhost:5000" 
                         Margin="0,0,0,10"/>
                
                <TextBlock Text="Votre nom d'utilisateur :" Margin="0,0,0,5"/>
                <TextBox x:Name="UserNameTextBox" 
                         Margin="0,0,0,10"/>
                
                <Button x:Name="TestConnectionButton" 
                        Content="ðŸ” Tester la connexion" 
                        Width="160" 
                        Height="30"
                        HorizontalAlignment="Left"
                        Click="TestConnection_Click"/>
                <TextBlock x:Name="ConnectionStatusText" 
                           Margin="0,5,0,0" 
                           FontSize="11"/>
            </StackPanel>
        </GroupBox>

        <!-- Options -->
        <StackPanel Grid.Row="4" VerticalAlignment="Top">
            <CheckBox x:Name="RememberChoiceCheckBox" 
                      Content="Se souvenir de mon choix au prochain dÃ©marrage"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Boutons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Continuer" 
                    Width="100" 
                    Height="32" 
                    Margin="0,0,10,0" 
                    Click="Continue_Click"
                    IsDefault="True"
                    FontWeight="SemiBold"/>
            <Button Content="Quitter" 
                    Width="100" 
                    Height="32" 
                    Click="Quit_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
