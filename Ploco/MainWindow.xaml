                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=GarageZoneList, Path=HasItems}" Value="False">
                                                                        <Setter Property="Visibility" Value="Visible"/>
