<Window x:Class="Ploco.ImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import de données" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Section Import Locomotives -->
        <TextBlock Grid.Row="0" Text="Import Locomotives" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <GroupBox Grid.Row="1" Header="Numéros de locomotives (un par ligne)" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBox x:Name="TxtLocomotives" 
                         Grid.Row="0"
                         AcceptsReturn="True" 
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         Margin="5"/>
                
                <Button Grid.Row="1" 
                        Content="Importer Locomotives" 
                        Click="BtnImportLocomotives_Click" 
                        HorizontalAlignment="Right"
                        Padding="20,5"
                        Margin="5"/>
            </Grid>
        </GroupBox>

        <!-- Séparateur -->
        <Separator Grid.Row="2" Margin="0,10"/>

        <!-- Section Import Dates -->
        <TextBlock Grid.Row="3" Text="Import Dates d'Entretien" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Importer Dates" Click="BtnImportDates_Click" Padding="20,5" Margin="0,0,10,0"/>
            <Button Content="Fermer" Click="BtnClose_Click" Padding="20,5"/>
        </StackPanel>
    </Grid>
</Window>
